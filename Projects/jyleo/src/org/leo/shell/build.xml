<?xml version="1.0" ?>
<project default="main">
    <target name="main" depends="compile" >
        <echo>JythonShell built</echo>
    </target>
    
    <target name="compile">
        <echo>Building shell package</echo>
        <javac srcdir="." listfiles="true" />
        <echo>Building util package</echo>
        <javac srcdir="./util" listfiles="true"/>
        <echo>Building io package</echo>
        <javac srcdir="./io" listfiles="true" />
        <echo>Building magic package</echo>
        <javac srcdir="./magic" listfiles="true" />
        <echo>Building actions package</echo>
        <javac srcdir="./actions" listfiles="true" />
        <echo>Building alias package</echo>
        <javac srcdir="./alias" listfiles="true" />
        <echo>Building widget pacakge</echo>
        <javac srcdir="./widget" listfiles="true" />
        <echo>Building color package</echo>
        <javac srcdir="./color" listfiles="true" />
    </target>

</project>